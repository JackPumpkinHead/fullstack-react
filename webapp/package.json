{
    "name": "@fullstack/webapp",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "preview": "vite preview",
        "types": "tsc --noEmit --project ./tsconfig.json && tsc --noEmit --project ./tsconfig.node.json",
        "prettify": "prettier --log-level warn --cache --write {src/**/*,*}.{ts,tsx,js,json,yml,scss} !**/{node_modules,dist}/**/*",
        "lint:js": "eslint .",
        "lint:js:fix": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts,.tsx . --fix",
        "stylelint": "stylelint --cache --cache-location ./node_modules/.cache/.stylelintcache \"src/**/*.scss\"",
        "stylecheck": "sass --update -q ./src:./node_modules/.cache/.stylecheckcache",
        "format": "prettier . --write",
        "lint:fix": "concurrently \"pnpm run lint:js:fix\" \"pnpm run format\" "
    },
    "dependencies": {
        "@fullstack/backend": "workspace:*",
        "@tanstack/react-query": "4.32.6",
        "@trpc/client": "10.37.1",
        "@trpc/react-query": "10.37.1",
        "include-media": "2.0.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-router-dom": "6.15.0",
        "reset-css": "5.0.2",
        "sass": "1.66.1"
    },
    "devDependencies": {
        "@types/react": "18.2.17",
        "@types/react-dom": "18.2.7",
        "@vitejs/plugin-react": "4.0.3",
        "prettier": "3.0.1",
        "stylelint": "^15.10.3",
        "stylelint-config-prettier-scss": "^1.0.0",
        "stylelint-config-standard-scss": "^11.0.0",
        "vite": "4.4.7"
    }
}
