{
    "name": "fullstack",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "b": "pnpm --filter @fullstack/backend",
        "w": "pnpm --filter @fullstack/webapp",
        "dev": "pnpm -r --parallel dev",
        "types": "concurrently \"pnpm b types\" \"pnpm w types\"",
        "prettify": "pnpm -r --parallel prettify",
        "lint": "concurrently \"pnpm b lint:fix\" \"pnpm w lint:fix\"",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "concurrently": "^8.2.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^16.5.0",
        "husky": "8.0.3",
        "lint-staged": "14.0.0",
        "prettier": "^3.0.2",
        "rimraf": "^5.0.1",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "5.1.6",
        "typescript-eslint": "^8.50.1"
    }
}
