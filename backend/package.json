{
    "name": "@fullstack/backend",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "ts-node-dev --rs ./src/index.ts",
        "build": "rimraf ./dist && tsc --build ./tsconfig.json",
        "start": "node ./dist/index.js",
        "types": "tsc --noEmit --project ./tsconfig.json",
        "prettify": "prettier --log-level warn --cache --write {src/**/*,*}.{ts,tsx,js,json,yml,scss} !**/{node_modules,dist}/**/*",
        "lint:js": "eslint .",
        "lint:js:fix": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts . --fix",
        "format": "prettier . --write",
        "lint:fix": "concurrently \"pnpm run lint:js:fix\" \"pnpm run format\""
    },
    "dependencies": {
        "@trpc/server": "10.37.1",
        "cors": "2.8.5",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/cors": "2.8.13",
        "@types/express": "^4.17.17",
        "@types/node": "^20.5.0"
    }
}
